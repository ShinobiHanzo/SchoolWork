#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <string> 
using namespace std;

// function declaration str_len that  
int str_len(char* ptr)
{
    int i = 0;
    while (*(ptr + i) != '\0')
        i++;
    return i;
}


void revstr(char* st)
{
    int len, i;
    char *start, *end, temp;
    len = str_len(st);
    start = st;
    end = st;

    for (i = 0; i < len - 1; i++)
        end++;

    for (i = 0; i < len / 2; i++)
    {
        temp = *end;
        *end = *start;
        *start = temp;

        start++;
        end--;
    }
}


int main(void) {

    unsigned int num;

    printf("input number: ");
    scanf_s("%d", &num);

    if (num <= -1) {
        num = num * -1;
        char st[to_string(num)] ;
        revstr(st);
        printf(" The reverse is: -%s", st);
        return 0;
    }
    else if (num >= 0) {
        char st[to_string(num)];
        revstr(st);
        printf(" The reverse is: -%s", st);
        return 0;
    }


}

