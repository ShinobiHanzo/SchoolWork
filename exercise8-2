//how to linear sort an array by decending order?
if(v[i]<v[i+1])


for(int i=1;i<n;i++)
    if(v[i-1]<v[i])    //is the problem here?
{
        x=v[i-1];v[i-1]=v[i];v[i]=x;
        ok=0;
}


    int m = n;
    do {
        int last = 0;
        for (int i = 1; i < m; i++)
            if (v[i-1] < v[i])
            {
                int x = v[i-1]; v[i-1] = v[i]; v[i] = x;
                last = i;
            }
        m = last;
    } while ( !( m < 2 ) );


