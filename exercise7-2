#include <stdio.h>

int main(){
    float avg;
    printf("please enter scores: \n");
    int Score1 = scanf("%d \n", &Score1);
    int Score2 = scanf("%d \n", &Score2);
    int Score3 = scanf("%d \n", &Score3);

    float temp = Score1 + Score2 + Score3;
    avg = temp % 3;

    if( avg >= 75){
        printf("Score1  Score2  Score3  Average  Grade\n");
        printf("%5d - %13d - %21d - %2f - A", Score1, Score2, Score3, avg);
    }
    else{
        printf("Score1  Score2  Score3  Average  Grade\n");
        printf("%5d - %13d - %21d - %2f - B", Score1, Score2, Score3, avg);
    }

}