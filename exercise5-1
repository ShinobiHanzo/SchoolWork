//Game of Chance
#include <stdio.h>
#include <stdbool.h>

int main(void){
    
    //int value var
        //rand value
    unsigned int x;
    unsigned int y;
        //rand sum
    unsigned int z;

    //string-bool var
    bool a=true;
    unsigned int c;

    printf("roll dice? 1/0:");
    scanf_s("%d", &c);

    while(a){
        if(c=="y"){
            x = 1 + (rand()%6);
            y = 1 + (rand()%6);
            z = x + y;
            printf("you rolled: %d + %d. Total: %d", x, y, z);
            switch(z){
             //roll default win
                case 7 || 11:{
                    printf("\nYou Win!!!");
                   scanf_s("\nPlay again? y/n: %d", &c);
                   return;
                }
               //roll default loss
                case 2:{
                    prinf("\nDefault! You Lose!");
                    scanf_s("\nTry again? y/n: %d", c);
                    return;
                }
                case 3:{
                    prinf("\nDefault! You Lose!");
                    scanf_s("\nTry again? y/n: %d", c);
                    return;
                }
                case 12:{
                    prinf("\nDefault! You Lose!");
                    scanf_s("\nTry again? y/n: %d", c);
                    return;
                }
                //roll point-win
                default:{
                    int point = z;             
                    while(z!=7){
                        x = 1 + (rand()%6);
                        y = 1 + (rand()%6);
                        z = x + y;
                        printf("you rolled: %d + %d. Total: %d", x, y, z);
                        if(z = point){
                            prinf("\nYou Win the Point!!!");
                            scanf_s("\nPlay again? y/n: %d", &c);
                        }
                        else if(z = 7){
                            prinf("\nDefault! You Lose!");
                            scanf_s("\nTry again? y/n: %d", c);
                        }
                    }
                }
        }
        }
        else if(c=="n"){
            a = false;
            return;
        }
        
    }  
}