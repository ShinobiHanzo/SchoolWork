//Game of Chance
#include <stdio.h>
#include <stdbool.h>

int main(void){
    
    //int value var
        //rand value
    unsigned int x;
    unsigned int y;
        //rand sum
    unsigned int z;

    //string-bool var
    bool a=true;
    unsigned char c;

    printf("roll dice? y/n:");
    scanf_s("%s", &c);

    while(a){
        switch(c){
            case ("y"){
                x = rand(%6) +1;
                y = rand(%6) +1;
                z = x + y;
            }
            case("n"){
                a = false;
                return;
            }
        }
        printf("you rolled: %d + %d. Total: %d", x, y, z);
        switch(z){
         //roll default win
            case( 7 || 11){
                printf("\nYou Win!!!");
                scanf_s("\nPlay again? y/n: %s", &c);
                return;
            }
            //roll default loss
            case( 2 || 3 || 12){
                prinf("\nDefault! You Lose!");
                scanf_s("\nTry again? y/n: %s", &c);
                return;
            }
            //roll point-win
            case(!= 7 || != 11 || !=2 || !=3 || != 12){
                int point = z;             
                while(z!=7){
                    x = rand(%6) +1;
                    y = rand(%6) +1;
                    z = x + y;
                    printf("you rolled: %d + %d. Total: %d", x, y, z);
                    if(z = point){
                        prinf("\nYou Win the Point!!!");
                        scanf_s("\nPlay again? y/n: %s", &c);
                    }
                    else if(z = 7){
                        prinf("\nDefault! You Lose!");
                        scanf_s("\nTry again? y/n: %s", &c);
                    }
                }
            }
        }
    }  
    
}