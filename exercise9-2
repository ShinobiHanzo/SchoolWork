#include <stdio.h>
#include <string.h>

int main(void){
    char a[64];
    printf("enter text:");
    scanf_s("%s", a, (unsigned)_countof(a));
    char* p = a;
    int count = 0;

    for (size_t i = 0; i < strlen(a); i++)
    {
        if (a[i]=="a")
        {
            count++;
        }
        
    }
    
    printf("there are %d amount of -a- in -%c-", count, 'a');
}

