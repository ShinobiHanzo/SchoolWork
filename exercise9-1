#include <stdio.h>
#include <time.h>
#include <stdlib.h>


int ticket[6];
int prize[6];

int main(void) {

    //ticket and prize size
    int points = 0;
    int arg_size = 6;

    //prize numbers randomisation
    srand(time(NULL));
    for (size_t i = 0; i < arg_size; i++)
    {
        prize[i - 1] = rand() % 42;

    }

    //ticket system:
    for (size_t i = 0; i < arg_size; i++)
    {
        printf("\nEnter number %d: ", i + 1);
        scanf_s("%d", &ticket[i]);
    }

    //prize point check:
    for (size_t i = 0; i < arg_size; i++)
    {
        if (ticket[i] == prize[i])
        {
            points += 1;
        }

    }

    //print results:
    printf("\nPrize numbers: ");
    for (size_t i = 0; i < arg_size; i++)
    {
        printf(" %d", prize[i]);
    }
    printf("\n      tickets: ");
    for (size_t i = 0; i < arg_size; i++)
    {
        printf(" %d", ticket[i]);
    }
    switch (points)
    {
    case 6:
        printf("\nTop prize!");
    case 5:
        printf("\nSecond prize!");
    case 4:
        printf("\nThird prize!");
    case 3:
        printf("\nFourth prize!");
    case 2:
        printf("\nFifth prize!");
    default:
        printf("\nNo prize.");
    }

}